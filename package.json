{
	"name": "brite-cli",
	"version": "1.0.0",
	"main": "index.js",
	"author": "Jonathan Creamer <jonathancreamer@eventbrite.com>",
	"license": "MIT",
	"bin": {
		"brite": "./dist/cli.js"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"build": "yarn run clean && babel src -Dd dist --extensions '.ts'",
		"format": "prettier --write '**/*.{js,ts,json,md}'"
	},
	"dependencies": {
		"@types/node": "^10.12.21",
		"scritch": "^1.1.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.3.1",
		"@babel/preset-typescript": "^7.1.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.1",
		"prettier": "^1.16.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,json,md}": [
			"prettier --write",
			"git add"
		]
	}
}
